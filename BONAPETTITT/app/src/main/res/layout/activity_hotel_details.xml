<android.support.design.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="10dp"
            app:expandedTitleMarginEnd="64dp"
            app:titleEnabled="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/white"
                android:layout_marginTop="?attr/actionBarSize"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@color/white50"
                    android:padding="7dp">

                    <ImageView
                        android:id="@+id/iv_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_black"/>

                    <TextView
                        android:id="@+id/tv_details_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="13sp"
                        android:text="asdsadasd"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="4dp"
                        android:layout_above="@+id/ll_3"/>

                    <LinearLayout
                        android:id="@+id/ll_3"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/ll_1"
                        android:gravity="center"
                        android:paddingLeft="7dp"
                        android:paddingStart="7dp"
                        android:paddingBottom="2dp">

                        <RatingBar
                            android:id="@+id/rating_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:max="5"
                            android:numStars="5"
                            android:theme="@style/RatingBar"
                            style="@style/RatingBar"/>

                        <TextView
                            android:id="@+id/tv_latest_details_tot_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="(0)"/>

                        <!--<ImageView-->
                        <!--android:id="@+id/iv_add_review"-->
                        <!--android:layout_width="20dp"-->
                        <!--android:layout_height="20dp"-->
                        <!--android:src="@mipmap/edit"-->
                        <!--android:layout_marginStart="5dp"-->
                        <!--android:layout_marginLeft="5dp"-->
                        <!--v/>-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginStart="7dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginEnd="5dp">

                        <ImageView
                            android:id="@+id/iv_loc"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/location"/>

                        <TextView
                            android:id="@+id/tv_details_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:textSize="12sp"
                            android:textColor="@color/whiteAA"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"/>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_rest_details"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/appBar"
            app:layout_anchorGravity="bottom"
            android:background="@color/colorPrimary"
            app:tabIndicatorColor="#40000000"
            app:tabIndicatorHeight="4dp"
            app:tabMode="fixed"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill" />

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
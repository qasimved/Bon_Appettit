<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:paddingBottom="2dp"
    android:background="@drawable/bg_shadow_black80">

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:cardCornerRadius="3dp"-->
    <!--app:cardElevation="5dp"-->
    <!--app:cardPreventCornerOverlap="false"-->
    <!--app:cardUseCompatPadding="true">-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/iv_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher"
                app:siRadius="5dp"
                app:siBorderAlpha="0"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_black_round"/>

            <TextView
                android:id="@+id/tv_list_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="13sp"
                android:text="asdsadasd"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="3dp"
                android:layout_above="@+id/ll_3"/>

            <LinearLayout
                android:id="@+id/ll_3"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ll_1"
                android:layout_marginBottom="3dp">

                <RatingBar
                    android:id="@+id/rating_list_latest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="5"
                    android:numStars="5"
                    android:theme="@style/RatingBar"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    style="@style/RatingBar"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_latest_list_tot_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="(0)"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_loc"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/location"/>

                <TextView
                    android:id="@+id/tv_list_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textSize="12sp"
                    android:textColor="@color/whiteAA"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>
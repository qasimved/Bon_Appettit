<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_shadow_black80">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardCornerRadius="3dp"-->
        <!--app:cardElevation="5dp"-->
        <!--app:cardPreventCornerOverlap="false"-->
        <!--app:cardUseCompatPadding="true">-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <RelativeLayout
                android:layout_width="190dp"
                android:layout_height="140dp">

                <com.apps.utils.RoundedImageView
                    android:id="@+id/iv_latest_home"
                    android:layout_width="190dp"
                    android:layout_height="140dp"
                    android:src="@mipmap/ic_launcher"
                    app:topRightRadius="5dp"
                    app:topLeftRadius="5dp"
                    app:bottomRightRadius="5dp"
                    app:bottomLeftRadius="5dp"
                    app:siBorderAlpha="0"/>

                <View
                    android:layout_width="190dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg_black_round"/>

                <TextView
                    android:id="@+id/tv_latest_home_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="4dp"
                    android:layout_above="@+id/ll_2"/>

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ll_1"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingStart="7dp"
                    android:paddingBottom="2dp">

                    <RatingBar
                        android:id="@+id/rating_home_latest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5"
                        android:theme="@style/RatingBar"
                        style="@style/RatingBar"/>

                    <TextView
                        android:id="@+id/tv_latest_home_tot_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:text="(0)"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginEnd="7dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_loc"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/location"/>

                    <TextView
                        android:id="@+id/tv_latest_home_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="10sp"
                        android:textColor="@color/whiteAA"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>